<h1>Click below to edit or delete <%= @city.name %>:</h1>

<p><a href="/cities/<%= @city.id %>/edit">Edit <%= @city.name %></a></p>

<form action="/cities/<%= @city.id %>/delete" method="post">
    <input type="submit" onclick="return confirm('Are you sure you want to delete the city?')"value="Delete <%= @city.name %>"/>
</form>

<p></p>

<% for country in @countries %>
  <% if @city.country_id == country.id %>
    <h1>
    <%= @city.name %> is in <a href="/countries/<%= country.id %>"><%= country.name %></a>
    </h1>
  <% end %>
<% end %>
